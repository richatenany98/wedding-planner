{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleDetection": "force"
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "client/**/*",
    "node_modules",
    "vite.config.ts",
    "server/vite.ts"
  ]
}